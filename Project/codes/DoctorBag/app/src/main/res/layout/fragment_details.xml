<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment"
    android:background="@drawable/pillbox">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <TextView
            android:layout_margin="30dp"
            android:id="@+id/banner"
            android:background="@drawable/edit_text_border"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Pill Status"
            android:layout_centerHorizontal="true"
            android:textSize="33sp"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" android:padding="9dp"
            android:layout_below="@+id/banner"
            android:id="@+id/slot1">

        <TextView
            android:background="@drawable/edit_text_border"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Slot1 Status"
            android:textSize="23sp"/>

        <TextView
            android:background="@drawable/edit_text_border"
            android:padding="15dp"
            android:id="@+id/slot1status"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="Slot1 Status"
            android:textSize="23sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="9dp"
            android:layout_below="@id/banner"
            android:layout_toEndOf="@id/slot1">

            <TextView
                android:background="@drawable/edit_text_border"
                android:padding="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Slot1 Status"
                android:textSize="23sp"/>

            <TextView
                android:background="@drawable/edit_text_border"
                android:padding="15dp"
                android:id="@+id/slot2status"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="Slot1 Status"
                android:textSize="23sp"/>

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>